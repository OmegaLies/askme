<div class="container">
  <p>
    <%= link_to "Создать новый вопрос", new_question_path, class: 'button button-main' %>
  </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg mb">Все вопросы</h2>
</div>

<% @questions.each do |question| %>
  <% if question.hidden? %>
    <div class="mt-sm container hidden">
      <%= render question %>
    </div>
  <% else %>
    <div class="mt-sm container">
      <%= render question %>
    </div>
  <% end %>
<% end %>
