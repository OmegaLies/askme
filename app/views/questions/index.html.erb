<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <% if question.hidden? %>
    <div class="mt-sm container hidden">
      <%= render question %>
    </div>
  <% else %>
    <div class="mt-sm container">
      <%= render question %>
    </div>
  <% end %>
<% end %>
